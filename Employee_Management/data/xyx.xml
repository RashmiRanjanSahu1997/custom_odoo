<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data><!--Bridge template-->
        <template id="custom_bridge_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">

                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o"><t t-set="company" t-value="o.company_id.sudo()"/></t><t t-if="not o or not 'company_id' in o"><t t-set="company" t-value="res_company"/></t>

            <!--call to the header template--><!-- t-call = "module_name.header template id"-->
            <t t-call="custom_template.custom_header_layout"/>
            <!--call to the body template-->
            <div class="article">
                <t t-raw="0"/>
            </div><!--call to the footer template-->
            <t t-call="custom_template.custom_footer_layout"/>
        </template>


        <!--Template header-->
        <template id="custom_header_layout">
            <div class="header">
                <div class="col-6">
                    <strong><span style="font-size:24px;">This is Custom header</span></strong>

                </div>
                <div class="col-6" align="right">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="width:120px;height:100px;"/><br/>
                    <span t-if="company.street" t-field="company.street"/><br/><span t-if="company.city" t-field="company.city"/><span t-if="company.zip" t-field="company.zip"/>,
                    <br/>
                    Tel:
                    <span t-if="company.phone" t-field="company.phone"/></div>
            </div>
        </template>


        <!--Template footer-->
        <template id="custom_footer_layout">
            <div class="footer">
                <div class="col-xs-12 pull-left">
                    <span>This is our custom footer</span>
                </div>
            </div>
        </template>
    </data>
</odoo>