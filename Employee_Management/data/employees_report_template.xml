<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_employee_details">
        <t t-call="web.html_container">
            <div class="page">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="ed">
<!--                        <div class="col-md-6">-->
<!--                        </div>-->
                        <br/><br/>
                        <div style="text-align:center" >
                            <img t-if="ed.image" t-att-src="image_data_uri(ed.image)"
                                 style="max-height:45pt;max-width:100%" alt="Company Logo"/>
                        </div>
                        <p class="bg bg-success font-danger">
                            Hello <span t-field="ed.name"/>
                        </p>

                        <table width="100%" style="border: 1px solid black" class="bg bg-primary">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>DOB</th>
                                    <th>Gender</th>
                                    <th>City</th>
                                    <th>Company</th>
                                    <th>Designation</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><p t-field="ed.name"/></td>
                                    <td><p t-field="ed.dob"/></td>
                                    <td><p t-field="ed.gender"/></td>
                                    <td><p t-field="ed.city"/></td>
                                    <td><p t-field="ed.company_id.name"/></td>
                                    <td><p t-field="ed.designation_id.name"/></td>
                                    <td><p t-field="ed.state"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>