    <record id="view_employee_details_form" model="ir.ui.view">
            <field name="name">employee.details.form.view</field>
            <field name="model">employee.details</field>
            <field name="groups_id" eval="[(4, ref('Employee_Management.group_emp_mng_admin'))]"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="learning,fresher,experienced"/>
                        <button type="object" name="set_fresher" string="Recently Joined" attrs="{'invisible':
                        [('state','in',['fresher'])]}"/>
                        <button type="object" name="set_experienced" string="Experienced"
                                attrs="{'invisible':[('state','in',['experienced'])]}"/>
                        <button name="send_employee_email" type="object" string="Send Email" class="oe-highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="move_designation" type="object" class="oe_stat_button" icon="fa-expand">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Designation</span>
                                </div>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="or_title">
                            <h1>
                                <field class="o_text_overflow" name="name" default_focus="1" placeholder="Enter Full Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="emp_manager"/>
                                <field name="dob"/>
                                <field name="mob" widget="phone" groups="Employee_Management.group_emp_mng_admin"/>
                                
                                <field name="designation_id" attrs="{'invisible':[('company_id','=',False)]}"/>
                                <field name="salary" attrs="{'invisible':[('company_id','=',False)]}"/>
                                <field name='epf' attrs="{'invisible':[('company_id','=',False)]}"/>
                                <field name='ctc_salary' attrs="{'invisible':[('company_id','=',False)]}"/>
                            </group>
                            <group>
                                <field name="is_active" widget="boolean_toggle"/>
                                <field name="age"/>
                                <field name="cv"/>
                                <field name="company_id" attrs="{'invisible':[('is_active','=',False)]}"/>
                                <field name="experience" attrs="{'invisible':[('company_id','=',False)]}"/>
                                <field name="company_address" attrs="{'invisible':[('company_id','=',False)]}"/>
                            </group>
                            <group groups="Employee_Management.group_emp_mng_admin">
                                <field name="email"/>
                                <field name="city"/>
                                <field name="gender"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Note">
                                <group>
                                    <field name="introduction" widget='char_emojis'/>
                                </group>
                            </page>
                            <page string="Other Details">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

