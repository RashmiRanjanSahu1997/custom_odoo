    <record id="action_employee" model="ir.actions.act_window">
            <field name="name">Employee Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.details</field>
            <field name="view_mode">tree,form,kanban,search</field>
    </record>

    <record id="employee_details_search" model="ir.ui.view">
            <field name="name">employee.details.search</field>
            <field name="model">employee.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="dob"/>
                    <field name="company_address"/>
                    <field name="designation_id"/>
                    <field name="company_id"/>
                    <filter string='By Fresher' name='state' domain="[('state','=','fresher')]"/>
                    <filter string='By Experience' name='state' domain="[('state','=','experienced')]"/>
                </search>
            </field>
        </record>

    <record model="ir.ui.view" id="employee_details_view_kanban">
            <field name="name">employee.details.kanban</field>
            <field name="model">employee.details</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="dob"/>
                    <field name="mob"/>
                    <field name="is_active"/>
                    <field name="city"/>
                    <field name="gender"/>
                    <field name="designation_id"/>
                    <field name="cv"/>
                    <field name="introduction"/>
                    <field name="company_id"/>
                    <field name="image"/>
                    <field name="id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
								<div class="o_kanban_image">
                                    <img class="o_kanban_image_inner_pic" alt="ghj"
                                           t-att-src="kanban_image('employee.details',
                                           'image',record.id.raw_value)"/>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <ul>
                                        <li>
                                            <field name="dob"/>
                                        </li>
                                        <li>
                                            <field name="mob"/>
                                        </li>
                                        <li>
                                            <field name="designation_id"/>
                                            <field name="company_address"/>
                                            <field name="state"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <menuitem id="menu_employee_details"
              name="Employee Management"
              action="action_employee"/>

</odoo>