<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="View_leaves_details_form" model="ir.ui.view">
        <field name="name">leaves.details.form</field>
        <field name="model">leaves.details</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="applied,verified,granted,cancelled"/>
                    <button type="object" name="set_verified" string='Verified'
                            attrs="{'invisible':[('state','in',['verified','granted','cancelled'])]}"/>
                    <button type="object" name="get_otp_verify" string='Get OTP Verify'
                            attrs="{'invisible':[('state','in',['verified','granted','cancelled'])]}"/>
                    <button type="object" name="set_granted" string="Granted"
                             attrs="{'invisible':[('state','in',['applied','granted','cancelled'])]}"/>
                    <button type="object" name="set_cancelled" string="Cancelled"
                            attrs="{'invisible':[('state','in',['cancelled','granted','applied'])]}"/>
                    <button type="action" name="%(Employee_Management.company_details_action)d" string="Company Details"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action"
                                    name="%(Employee_Management.company_details_action)d" icon="fa-globe icon">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">Total Leaves</span>
                                    <span class="o_stat_value">
                                        <field name="total_leaves" widget='integer'/>
                                    </span>
                                </div>
                            </button>
                        </div>
                    <group>
                        <field name="emp_id"/>
                        <field name="from_date" widget="date_range"/>
                        <field name="end_date"/>
                        <field name="days" readonly='1'/>
                        <field name="verify1"/>
                        <field name="otp" placeholder="please verify otp"/>
                    </group>
                    <notebook>
                        <page string="Reason">
                            <group>
                                <field name="reason"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="leaves_details_tree_view" model="ir.ui.view">
            <field name="name">leaves.details.tree</field>
            <field name="model">leaves.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="emp_id" widget="many2one_tags"/>
                    <field name="from_date"/>
                    <field name="end_date"/>
                    <field name="days"/>
                    <field name="reason"/>
                    <field name="state" decoration-success="state == 'granted' or state == 'verified'"
                           decoration-info="state == 'applied'"
                           decoration-danger="state == 'cancelled'" widget="badge" optional="show"/>
                </tree>
            </field>
        </record>

    <record id="view_leaves_details_kanban" model="ir.ui.view">
        <field name="name">leaves.details.kanban</field>
        <field name="model">leaves.details</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="emp_id"/>
                <field name="from_date"/>
                <field name="end_date"/>
                <field name="reason"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="emp_id"/>
                                    </li>
                                    <li><field name="reason"/></li>
                                    <li><field name="from_date"/> To
                                        <field name="end_date"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="leaves_details_action" model="ir.actions.act_window">
        <field name="name">Leaves Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">leaves.details</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="menu_leaves_details"
              name="Leaves Details"
              action="leaves_details_action"
              parent="Employee_Management.menu_employee_details"/>

</odoo>





