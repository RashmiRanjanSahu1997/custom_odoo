<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tickets_tags_tree_view" model="ir.ui.view">
        <field name="name">Tickets.Tags.Tree.View</field>
        <field name="model">tickets.tags</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="tickets_tags_action" model="ir.actions.act_window">
        <field name="name">All Tickets Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tickets.tags</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>