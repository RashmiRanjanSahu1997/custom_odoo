<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="helpdesk_teams_form_view" model="ir.ui.view">
        <field name="name">helpdesk.teams.form.view</field>
        <field name="model">helpdesk.support.team</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Teams Details">
                <sheet>
                    <div class="oe_title" id='title'>
                        <label for="name" class="oe_edit_only"/>
                        <h1 id="name">
                            <field name="name" placeholder="Helpdesk Support Team..."/>
                        </h1>
                    </div>
                    <div class="oe_title" id='title'>
                        <label for="type" class="oe_edit_only"/>
                        <h5 id="type">
                            <field name="type"/>
                        </h5>
                    </div>
                    <field name="active" invisible="1"/>
                    <field name="description" placeholder="Description for customer portal"/>
                    <field name="company_id" groups="base.group_multi_company" required="1"/>
                    <h2>Team Default Configuration</h2>
                    <div class="row mt16 o_settings_container" id="productivity">
                        <div class="col-lg-6 o_setting_box"
                             title="With random assignation, every user gets the same number of tickets. With balanced assignation, tickets are assigned to the user with the least amount of open tickets.">
                            <div class="o_setting_right_pane">
                                <label for="assign_method"/>
                                <div class="text-muted">
                                    How to assign newly created tickets to the right person
                                </div>
                                <div>
                                    <field name="assign_method" class="mt16 o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="member_ids"/>
                                <div class="text-muted">
                                    Individuals to whom the tickets will be automatically assigned. Keep empty for
                                    everyone to be part of the team.
                                </div>
                                <div>
                                    <field name="member_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                           class="mt16"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="visibility_member_ids"/>
                                <div class="text-muted">
                                    Team Members to whom this team will be visible. Keep empty for everyone to see this
                                    team.
                                </div>
                                <div>
                                    <field name="visibility_member_ids" widget="many2many_tags"
                                           options="{'no_create_edit': True}" class="mt16"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_teams_tree_view" model="ir.ui.view">
        <field name="name">helpdesk.teams.tree.view</field>
        <field name="model">helpdesk.support.team</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Teams" multi_edit="1" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name" class="field_name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.support.team</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>