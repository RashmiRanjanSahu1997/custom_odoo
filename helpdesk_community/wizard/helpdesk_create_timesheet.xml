<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_create_timesheet_view_form" model="ir.ui.view">
        <field name="name">helpdesk.create.timesheet.wizard</field>
        <field name="model">helpdesk.create.timesheet</field>
        <field name="arch" type="xml">
            <form string="Save time">
                <group>
                    <field name="time_spent" string="Duration" />
                    <field name="description" widget="text"  placeholder="Describe your activity..."/>
                </group>
                <footer>
                    <button string="Save" type="object" name="action_generate_timesheet" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" type="object" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>