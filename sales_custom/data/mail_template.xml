<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="reject_sale_mail_template" model="mail.template">
            <field name="name">Reject Product: Send by email</field>
            <field name="model_id" ref="sales_custom.model_sale_order"/>
            <field name="subject">Hello Dear</field>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="email_to">{{object.create_uid.login}}</field>
            <field name="body_html" type="html">
                <t t-esc="object"/>
                <p class="font-danger">
                    Hello <t t-out="object.name">Customer</t>
                     <br/><br/>
                </p>
                <p>Your request is rejected</p>
                <p>Our team will contact you soon.Thank You!!!</p>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="approve_sales_mail_template" model="mail.template">
            <field name="name">sale product: Send by email</field>
            <field name="model_id" ref="sales_custom.model_sale_order"/>
            <field name="subject">Hello Dear</field>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="email_to">{{ ctx.get('email') }}</field>
            <field name="body_html" type="html">
                <t t-esc="object"/>
                <p class="font-danger">
                    Hello <t t-out="object.name">Customer</t>
                     <br/><br/>
                </p>
                <p>this is to inform you that your sales request approved</p>
                <p>Thank You!!!</p>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="sales_submit_mail_template" model="mail.template">
            <field name="name">Create Product: Send by email</field>
            <field name="model_id" ref="sales_custom.model_sale_order"/>
            <field name="subject">Hello Dear</field>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="email_to">{{object.create_uid.login}}</field>
            <field name="body_html" type="html">
                <t t-esc="object"/>
                <p class="font-danger">
                    Hello <t t-out="object.name">Customer</t>
                     <br/><br/>
                </p>
                <p>This is to inform you that Your sales  request granted</p>
                <p>Please wait for some couple of minutes to approve</p>
                    <p>this is the link for view the product<br></br>
                    </p>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>