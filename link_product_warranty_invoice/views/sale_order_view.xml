<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_inherit_form_warranty" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@name='button_box']" position="inside">
                <field name="warranty_ids" invisible="1"/>
                <button type="object" name="action_show_warranty" class="oe_stat_button" icon="fa-certificate" attrs="{'invisible': [('warranty_count','=',0)]}">
                    <field name="warranty_count" widget="statinfo" string="Warranty"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>