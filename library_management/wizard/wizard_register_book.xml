<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wizard_register_book_view_form" model="ir.ui.view">
        <field name="name">wizard.register.book.view.form</field>
        <field name="model">wizard.register.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="register_book" string="register_book"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_register_book" model="ir.actions.act_window">
        <field name="name">Register Book</field>
        <field name="res_model">wizard.register.book</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>