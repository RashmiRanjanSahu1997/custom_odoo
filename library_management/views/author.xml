<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="author_view_form" model="ir.ui.view">
        <field name="name">author.view.form</field>
        <field name="model">author</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="action" name="%(action_wizard_register_book)d" string="Register Book"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="author_view_tree" model="ir.ui.view">
        <field name="name">author.view.tree</field>
        <field name="model">author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_author" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="res_model">author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_author"
        name="Author"
        action="action_author"
        parent="library_management.menu_library_management"/>
</odoo>