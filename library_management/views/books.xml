<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="books_view_form" model="ir.ui.view">
        <field name="name">books.view.form</field>
        <field name="model">books</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="books_view_tree" model="ir.ui.view">
        <field name="name">books.view.tree</field>
        <field name="model">books</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">books</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('author_ids.name', 'in', ["Chetan Bhagat"])]</field>
    </record>

    <menuitem
        id="menu_books"
        name="Books"
        action="action_books"
        parent="library_management.menu_library_management"/>
</odoo>