    <record id="account_loan_action" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">account.loan</field>
    </record>

    <menuitem
            id="account_loan_menu"
            parent="account.menu_finance_entries"
            sequence="80"
            name="Loans"
            action="account_loan_action"
    />

    <record id="payment_account_loans_lines_actions" model="ir.actions.server">
        <field name="name">Accountlines Invoice</field>
        <field name="model_id" ref="loan_management.model_account_loan"/>
        <field name="binding_model_id" ref="loan_management.model_account_loan"/>
        <field name="state">code</field>
        <field name="binding_view_types">form</field>
        <field name="code">action = records.update_price_product()
        </field>
    </record>

