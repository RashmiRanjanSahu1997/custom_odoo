<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="send_loan_mail_template" model="mail.template">
            <field name="name">Loan Mail: Send by email</field>
            <field name="model_id" ref="loan_management.model_account_loan"/>
            <field name="subject">Hello Dear</field>
            <field name="email_from">{{object.create_uid.email}}</field>
            <field name="email_to">{{object.name.email}}</field>
            <field name="body_html" type="html">
                <t t-esc="object"/>
                <p class="font-danger">
                    Hello <t t-out="object.name">Customer</t>
                     <br/><br/>
                </p>
                <p>Your request is received</p>
                <p>Our team will contact you soon.Thank You!!!</p>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
    </odoo>