<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loan_product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.product</field>
        <field name="view_mode">form,tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <record id="loan_product_kanban_view" model="ir.ui.view">
        <field name="name">loan.product.kanban.view</field>
        <field name="model">loan.product</field>
        <field name="arch" type="xml">

            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="product"/>
                <field name="price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('loan.product', 'image',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <b>
                                        <field name="product"/>
                                    </b>
                                </strong>
                                <div t-if="record.price.value">
                                    <span>Price: $</span>
                                    <t t-esc="record.price.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="loan_product_form_view" model="ir.ui.view">
        <field name="name">loan.product.form.view</field>
        <field name="model">loan.product</field>
        <field name="arch" type="xml">
            <form string="Loan Product">
                <sheet>
                    <group>
                        <group>
                            <field name="product"/>
                            <field name="price"/>
                            <field name="princie_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loan_product_tree_view" model="ir.ui.view">
        <field name="name">loan.product.tree.view</field>
        <field name="model">loan.product</field>
        <field name="arch" type="xml">
            <tree string="Loan Product">
                <field name="product"/>
                <field name="price"/>
                <field name="princie_id"/>
            </tree>
        </field>
    </record>
</odoo>