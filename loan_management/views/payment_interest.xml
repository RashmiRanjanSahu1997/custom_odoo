<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payments_interests_actions" model="ir.actions.act_window">
        <field name="name">Payment Interest</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.interest</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <record id="payment_interest_form_view" model="ir.ui.view">
        <field name="name">payment.interest.form.view</field>
        <field name="model">payment.interest</field>
        <field name="arch" type="xml">
            <form string="Payment Interest">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_interest_tree_view" model="ir.ui.view">
        <field name="name">payment.interest.tree.view</field>
        <field name="model">payment.interest</field>
        <field name="arch" type="xml">
            <tree string="Payment Interest">
                <field name="name"/>
            </tree>
        </field>
    </record>


</odoo>

